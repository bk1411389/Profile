<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/tobisuke" android:id="@+id/myImageView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/myText"
            android:layout_marginTop="80dp"/>
    <TextView
            android:text="へーる"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/myText" android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/myImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/myText">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="60dp">
            <Button
                    android:text="なまえ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/myNameButton"
                    android:background="#4FC7E5" android:textColor="#FFFFFF"
                    android:layout_weight="1"/>
            <Button
                    android:text="スポーツ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/myLikeSportsButton" android:layout_weight="1"
                    android:background="#929292" android:textColor="@android:color/background_light"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="好きな食べ物"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/myLikeFoodsButton" android:layout_weight="1"
                    android:background="#929292" android:textColor="@android:color/background_light"/>
            <Button
                    android:text="趣味"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/myLikeHobbyButton" android:layout_weight="1"
                    android:background="#929292" android:textColor="@android:color/background_light"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>